<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">自分の投稿一覧</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <%= link_to new_article_path do %>
            <div class="btn-group mr-2">
           　 <button type="button" class="btn btn-sm btn-outline-secondary">新しく投稿する</button>
          　</div>
          <% end %>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table table-sm">
          <h3>自己PR</h3>
          <thead class="thead-light">
            <tr>
              <th scope="col">志望業界</th>
              <th scope="col">志望する企業規模</th>
              <th scope="col">投稿内容</th>
              <th scope="col">投稿詳細</th>
              <th scope="col">編集</th>
              <th scope="col">投稿を削除</th>
            </tr>
          </thead>
          <tbody>
            <% @selfPRarticles.each do |article| %>
              <tr>
                <td><%= article.article_industry %></td>
                <td><%= article.article_companyScale %></td>
                <td><%= article.article_content %></td>
                <td><%= link_to 'Show', article_path(article) %></td>
                <td><%= link_to 'Edit', edit_article_path(article) %></td>
                <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <table class="table table-sm">
          <tbody>
            <h3>志望動機</h3>
            <thead class="thead-light">
              <tr>
                <th scope="col">志望業界</th>
              <th scope="col">志望する企業規模</th>
              <th scope="col">投稿内容</th>
              <th scope="col">投稿詳細</th>
              <th scope="col">編集</th>
              <th scope="col">投稿を削除</th>
              </tr>
            </thead>
            <% @reasonarticles.each do |article| %>
