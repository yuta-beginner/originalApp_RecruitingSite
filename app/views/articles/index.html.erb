                <td><%= article.article_industry %></td>
                <td><%= article.article_companyScale %></td>
                <td><%= article.article_content %></td>
                <td><%= link_to 'Show', article_path(article) %></td>
                <td><%= link_to 'Edit', edit_article_path(article) %></td>
                <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <table class="table table-sm">
          <h3>面接動画</h3>
          <thead class="thead-light">
            <tr>
              <th scope="col">志望業界</th>
              <th scope="col">志望する企業規模</th>
              <th scope="col">投稿内容</th>
              <th scope="col">投稿詳細</th>
              <th scope="col">編集</th>
              <th scope="col">投稿を削除</th>
            </tr>
          </thead>
          <tbody>
            <% @moviearticles.each do |article| %>
              <tr>
                <td><%= article.article_industry %></td>
