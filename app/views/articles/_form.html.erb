<div class="container-fluid">
  <div class="row">
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">新しい投稿の作成</h1>
      </div>
      <%= form_with(model: article, local: true) do |form| %>
        <% if article.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
      
            <ul>
            <% article.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="field">
          <label><h5><strong>投稿カテゴリー</strong></h5></label><br>
          <%= form.label(:selfPR, for: nil, class:'category_label') do %>
            <%= form.radio_button :category, :selfPR %>自己PR
          <% end %>
          <%= form.label(:reason, for: nil, class:'category_label') do %>
            <%= form.radio_button :category, :reason %>志望動機
          <% end %>
          <%= form.label(:movie, for: nil, class:'category_label') do %>
            <%= form.radio_button :category, :movie %>面接動画
          <% end %>
        </div>
      
        <div class="field">
          <h5><strong><%= form.label :article_industry, "志望業界" %></strong></h5>
          <%= form.text_field :article_industry %>
        </div>
      
        <div class="field">
          <label><h5><strong>志望する企業規模</strong></h5></label><br>
          <%= form.label(:large, for: nil, class:'article-companyScale_label') do %>
            <%= form.radio_button :article_companyScale, :large %>大手
          <% end %>
          <%= form.label(:smallmedium, for: nil, class:'article-companyScale_label') do %>
            <%= form.radio_button :article_companyScale, :smallmedium %>中小
          <% end %>
          <%= form.label(:venture, for: nil, class:'article-companyScale_label') do %>
            <%= form.radio_button :article_companyScale, :venture %>ベンチャー
          <% end %>
          <%= form.label(:nothing, for: nil, class:'article-companyScale_label') do %>
            <%= form.radio_button :article_companyScale, :nothing %>特に気にしない
          <% end %>
        </div>
      
        <div class="field">
          <h5><strong><%= form.label :article_content, "投稿内容" %></strong></h5>
          <%= form.text_area :article_content %>
        </div>
      
        <div class="actions">
          <%= form.submit %>
        </div>
      <% end %>
    </main>
  </div>
</div>
