<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_with model: @user, url: mypage_users_path,class: 'registration-main', local: true do |f| %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">名前</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :name, class:"input-default", id:"nickname", placeholder:"例) ジュエル　りん子", maxlength:"40" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", autofocus: true %>
    </div>
    <div class='register-btn'>
      <%= f.submit "UPDATE" ,class:"register-red-btn" %>
    </div>
    <p class='register-info'>本人情報の登録について</p>
<% end %>
